<form class="form" action="/getCoupon" method="POST" id="form-container">
  <label for="name">Name</label>
  <input id="name" type="text" name="name" placeholder="name">
  <label for="email">Email</label>
  <input id="email" type="email" name="email" placeholder="email@domain.com">

  {{!-- {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}} --}}

  <button type="submit">Get your coupon!</button>
</form>

    <style>
        #map {
            height: 40vh;
        }
    </style>




<section class="row">
  <div id="map" class="col-lg-4">
  </div>

  <div class="col-lg-4">
    <ul class="nav nav-pills nav-stacked scroll-store">
        {{#each store}}
          <li class="nav-item">
            <h4>{{storeName}}</h4>
            <p>{{address}}, {{number}}</p>
            <p>{{neighborhood}}</p>
            <p>{{city}}</p>
            <hr class="my-4 event-break">
            </p>        
          </li>
        {{/each}}
      </ul>
  </div>
</section>

